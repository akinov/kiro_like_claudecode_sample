<% content_for(:title, "投稿一覧 - 掲示板") %>

<div class="max-w-4xl mx-auto">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">投稿一覧</h2>
  
  <div id="posts_list" class="space-y-4">
    <% @posts_data.each do |post| %>
      <%= render "post_card", post: post %>
    <% end %>
    
    <% if @posts_data.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500 text-lg">まだ投稿がありません</p>
        <p class="text-gray-400 mt-2">最初の投稿を作成してみましょう！</p>
      </div>
    <% end %>
  </div>
</div>